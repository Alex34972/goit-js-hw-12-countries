<h1 class="card-name">{{name}}</h1>
  <article class="card">   
   
    <div class="card-content">
      <p class="card__capital">Capital: <span>{{capital}}</span></p>
      <p class="card__population">Population: <span>{{population}}</span></p>
      <p class="card__languages">Languages:
      </p>
        <ul class="languages-list">
        {{#each languages}}
        <li class="languages-list__item">{{this.name}}</li>
        {{/each}}
      </ul>
    </div>
       <div class="card-flag">
    <img
      src={{flag}}
      alt={{name}}
      class="card-image"
    />
    </div>
  </article>
